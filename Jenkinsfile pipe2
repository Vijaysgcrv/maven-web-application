  
pipeline{

agent any

triggers{
 pollSCM('* * * * *')
}

options{
timestamps()
buildDiscarder(logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '5', daysToKeepStr: '', numToKeepStr: '5'))
}

tools{
maven "maven3.8.1"
}

stages{

 stage('CheckoutCode'){
 steps{
  git branch: 'development', credentialsId: '64fcbd0c-c43c-4cf7-bded-a85965ee32c2', url: 'https://github.com/Vijaysgcrv/maven-web-application.git'
 }
 }
 
 stage('Build'){
  steps{
  bat "mvn clean package"
  }
 }


  stage('ExecuteSonarQubeReport'){
  steps{
  bat "mvn clean sonar:sonar"
  }
 }
 
 stage('UploadArtifactIntoNexus'){
  steps{
  bat "mvn clean deploy"
  }
 }
 }
 
